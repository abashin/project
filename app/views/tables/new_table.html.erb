        <div class="col-sm-4">
          <label for="exampleFormControlSelect1">Год</label>
          <input type="text" class="form-control" id="return_year" name="table[return_year]" placeholder="2019" value="" required >
        </div>
      </div>



      <hr class="mb-4">
      <h4 class="mb-3">Процент за месяц</h4>
      <div class="row">
        <div class="col-sm-12">
          <input type="text" class="form-control" id="month_percent" name="table[month_percent]" placeholder="10%" value="" required >
