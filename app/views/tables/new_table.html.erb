            </select>
          </div>
        </div>
        <div class='col-sm-4'>
          <div class="form-group">
            <label for="exampleFormControlSelect1">Месяц</label>
            <select class="form-control" id="issue_month" name="table[issue_month]">
              <option>01</option>
              <option>02</option>
              <option>03</option>
              <option>04</option>
              <option>05</option>
              <option>06</option>
              <option>07</option>
              <option>08</option>
              <option>09</option>
              <option>10</option>
