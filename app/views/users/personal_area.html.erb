<body class="bg-light">
<div class="container">
  <div class="py-5 text-center">
    <img class="d-block mx-auto mb-4" src="/docs/4.2/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
    <h2>Мои расписки</h2>

  </div>
</div>

<div class="container">

  <div class="card-deck mb-4 text-center">

    <% @debts.each do |u| %>
      <div class="col-4 h-100 mb-3">
        <div class="card mb-4 box-shadow" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Расписка <%=u.created_at.day%>.<%=u.created_at.month%>.<%=u.created_at.year%></h5>
            <p class="card-text">
            <p>Заемщик: <%= u.name %> <%= u.lastname %> <%= u.patronymic %>,</p>
            <p>Заидомовец: <%= u.borrower_name %> <%= u.borrower_lastname %> <%= u.borrower_patronymic %>,</p>
            <p>Сумма: <%= u.debt_summ %></p>
            <p>Cрок: <%= u.date_return_debt %></p>
            </p>
            <%= link_to 'show', u , :class => "card-link"%>
            <%=link_to 'delete',u, method: :delete, :class => "card-link" %>



          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="py-5 text-center">
    <img class="d-block mx-auto mb-4" src="/docs/4.2/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
    <h2>Мои таблицы</h2>

  </div>
</div>

<body class="bg-light">
<div class="container">

  <div class="card-deck mb-4 text-center">

    <% @tables.each do |u| %>
      <div class="col-4 h-100 mb-3">
        <div class="card mb-4 box-shadow" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= u.creator_email%></h5>
            <p class="card-text">
            <p>Сумма: <%= u.debt_summ%></p>
            <p>Дата выдачи: <%= u.issue_day%>.<%= u.issue_month%>.<%= u.issue_year%></p>
            <p>Дата возвращения: <%= u.return_day%>.<%= u.return_month%>.<%= u.return_year%></p>
            </p>
            <%=link_to 'delete',u, method: :delete, :class => "card-link" %>
            <%=link_to 'show',u, method: :show, :class => "card-link" %>


          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
</body>


