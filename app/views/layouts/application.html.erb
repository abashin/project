<!DOCTYPE html>
<html>
  <head>
    <title>Project</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <ul class="menu">
    <li><%= link_to 'домой', root_path %></li>
    <li><%= link_to '', '/index' %></li>
    <li><%= link_to 'все пользователи', '/index' %></li>
    <li><a href="new_debt">новая расписка</a></li>
    <li><%= link_to 'все расписки', '/all' %></li>
    <li><%= if logged_in?
              link_to 'личный кабинет', '/personal_area'

            else
              link_to 'вход', '/signin'
            end %></li>
  </ul>
  <% if logged_in? %>
    <div  style="text-align: right">
      <%= current_user['email'] || 'User is not logged in' %>
    </div>
  <% end %>
  <% if flash[:notice]  %>
    <div style="background-color: lemonchiffon">
      <%= flash[:notice] %>
    </div>
  <% end %>
    <%= yield %>
  </body>
</html>
